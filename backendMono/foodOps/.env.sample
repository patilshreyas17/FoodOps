# --- Server Configuration ---
# The port where your Spring Boot application will run
SERVER_PORT=5454

# --- MySQL Database Configuration ---
# Root password for the MySQL container
MYSQL_ROOT_PASSWORD=your_root_password_here
# Name of the database to be created on startup
MYSQL_DATABASE=foodops
# Application-specific database user
MYSQL_USER=db_user_name
# Password for the application-specific database user
MYSQL_PASSWORD=db_password_here

# --- Spring Boot Runtime Configuration ---
# Internal Docker connection string.
# NOTE: 'mysql' must match the service name in docker-compose.yml
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/foodops?allowPublicKeyRetrieval=true&useSSL=false
SPRING_DATASOURCE_USERNAME=db_user_name
SPRING_DATASOURCE_PASSWORD=db_password_here

# JPA/Hibernate Settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# --- CORS Configuration ---
# Comma-separated list of frontend URLs allowed to access this API
# Example: http://192.168.x.x:3000,http://localhost:3000
CORS_ORIGINS=http://localhost:3000